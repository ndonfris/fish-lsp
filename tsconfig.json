{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "outDir": "out",
    "rootDir": "src",
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    // "resolvePackageJsonImports": true,
    "baseUrl": ".",
    "paths": {
      "@package": ["./package.json"],
      "completion/*": ["./src/utils/completion/*"],
      "utils/*": ["./src/utils/*"],
      "tests/*": ["./test-data/*"]
    }
  },
  "include": [
    "src",
    "src/**/*.ts",
    "../*.json",
    "../test-data/",
    "../snippets/**.{json,ts}"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
