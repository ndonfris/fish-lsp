{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "outDir": "out",
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "resolvePackageJsonImports": true,
    "resolvePackageJsonExports": true,
    // "resolvePackageJsonImports": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@package": ["./package.json"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../*.json",
    // "test-data/**/*",
    "snippets/**.json",
    "../snippets/**.{json,ts}"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}
