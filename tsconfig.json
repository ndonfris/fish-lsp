{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "outDir": "./out",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@package": ["../package.json"],
      "@snippets/*": ["../snippets/*"],
      "@src/*": ["./*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "snippets/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}