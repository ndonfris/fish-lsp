{
  "$schema": "https://json.schemastore.org/package",
  "author": "ndonfris",
  "license": "MIT",
  "name": "fish-lsp",
  "version": "1.0.11-pre.10",
  "description": "LSP implementation for fish/fish-shell",
  "keywords": [
    "lsp",
    "fish",
    "fish-shell",
    "language-server-protocol",
    "language-server"
  ],
  "homepage": "https://fish-lsp.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndonfris/fish-lsp.git"
  },
  "bugs": {
    "url": "https://github.com/ndonfris/fish-lsp/issues"
  },
  "main": "./lib/server.js",
  "typings": "./lib/server.d.ts",
  "browser": "./lib/fish-lsp-web.js",
  "bin": {
    "fish-lsp": "./bin/fish-lsp"
  },
  "man": "./man/fish-lsp.1",
  "engines": {
    "node": ">=18.0.0"
  },
  "funding": {
    "url": "https://github.con/ndonfris",
    "type": "github"
  },
  "directories": {
    "man": "./man/"
  },
  "files": [
    "bin/fish-lsp",
    "dist/fish-lsp",
    "!lib/*.(map|map.js)",
    "lib/*.js",
    "lib/*.d.ts",
    "lib/*.txt",
    "fish_scripts/",
    "scripts/build-time",
    "package.json",
    "man/fish-lsp.1",
    "README.md",
    "LICENSE.md",
    "tree-sitter-fish.wasm"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "run-s sh:build-time sh:build-wasm build:prod sh:relink sh:build-completions",
    "dev:watch": "run-s dev watch",
    "postinstall": "run-s sh:build-time",
    "prepack": "run-s -nl --continue-on-error -- stash clean:lib update-changelog lint:check generate:man generate:commands build prepack:commit stash:add",
    "prepack:commit": "git add -u && (git log -1 --pretty=%B | grep -q '^chore: prepack auto-commit' && git commit --amend --no-edit || git commit -m \"chore: prepack auto-commit changes before pack $(date +%D\\ %T)\") || true",
    "postpack": "git log -1 --pretty=%B | grep -q '^chore: prepack auto-commit' && git reset --soft HEAD~1 || true",
    "package": "npm pack",
    "package:dry": "run-s package:build && npm pack --dry-run --ignore-scripts",
    "package:build": "run-s lint:check generate:man generate:commands sh:build-wasm build:prod",
    "build": "tsx scripts/build.ts --all",
    "build:prod": "tsx scripts/build.ts --all --production",
    "build:web": "tsx scripts/build.ts --web --production",
    "watch": "tsx scripts/build.ts --all --watch",
    "sh:build-completions": "fish ./scripts/build-completions.fish",
    "sh:build-time": "node ./scripts/build-time",
    "sh:build-wasm": "fish ./scripts/build-fish-wasm.fish",
    "sh:relink": "fish ./scripts/relink-locally.fish",
    "sh:build-release": "fish ./scripts/build-release.fish",
    "clean": "rimraf out dist lib man node_modules *.tgz .tsbuildinfo coverage .bun",
    "clean:all": "rimraf out lib dist .tsbuildinfo node_modules tree-sitter-fish.wasm logs.txt coverage .bun",
    "clean:lib": "rimraf out lib dist .tsbuildinfo",
    "test": "env -i HOME=$HOME PATH=$PATH NODE_ENV=test jest",
    "test:coverage": "env -i HOME=$HOME PATH=$PATH NODE_ENV=test jest --coverage --collectCoverageFrom 'src/**/*.ts'",
    "refactor": "knip",
    "lint:check": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix ",
    "lint:check-fix": "eslint . --ext .ts --fix-dry-run",
    "update-changelog": "conventional-changelog -i docs/CHANGELOG.md --same-file",
    "update-changelog:dry": "conventional-changelog -i docs/CHANGELOG.md --stdout",
    "update-changelog:dry:diff": "conventional-changelog -i docs/CHANGELOG.md --stdout | diff --color=always --unified docs/CHANGELOG.md -",
    "stash": "run-s -sn stash:add stash:undo",
    "stash:add": "git stash push -a -u -m \"prepack: automated stash before packaging $(date +%D\\ %T)\"",
    "stash:undo": "git stash apply 2>/dev/null || echo \"ERROR: reset stash failed!\" >&2",
    "show:pass": "echo \"\\033[32mPASS: $1\\033[0m\"",
    "show:fail": "echo \"\\033[31mFAIL: $1\\033[0m\" >&2",
    "generate:commands": "tsx ./scripts/fish-commands-scrapper.ts --write-to-snippets",
    "generate:commands:check": "tsx ./scripts/fish-commands-scrapper.ts",
    "create:man:dir": "mkdir -p ./man",
    "generate:man:cat": "cat docs/MAN_FILE.md | npx marked-man --date \"$(date)\"  --manual fish-lsp --section 1 2>/dev/null || true",
    "generate:man": "run-s create:man:dir generate:man:actual",
    "generate:man:actual": "npm run --foreground-scripts -s generate:man:cat > ./man/fish-lsp.1",
    "generate:man:diff": "npm run --foreground-scripts -s generate:man:cat | diff --color=always --unified ./man/fish-lsp.1 - && npm run -s show:pass 'NO CHANGES TO man/fish-lsp.1' || npm run -s show:fail 'CHANGES IN man/fish-lsp.1'",
    "generate:man:cp": "cp ./man/fish-lsp.1 ~/.local/share/man/man1/fish-lsp.1",
    "generate:man:write-global": "run-s generate:man generate:man:cp"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix"
    ]
  },
  "eslintIgnore": [
    "!.eslintrc.cjs"
  ],
  "contributes": {
    "commands": [
      {
        "command": "fish-lsp.executeRange",
        "title": "execute the range"
      },
      {
        "command": "fish-lsp.executeLine",
        "title": "execute the line"
      },
      {
        "command": "fish-lsp.executeBuffer",
        "title": "execute the buffer"
      },
      {
        "command": "fish-lsp.execute",
        "title": "execute the buffer"
      },
      {
        "command": "fish-lsp.createTheme",
        "title": "create a new theme"
      },
      {
        "command": "fish-lsp.showStatusDocs",
        "title": "show the status documentation"
      },
      {
        "command": "fish-lsp.showWorkspaceMessage",
        "title": "show the workspace message"
      },
      {
        "command": "fish-lsp.updateWorkspace",
        "title": "update the workspace"
      },
      {
        "command": "fish-lsp.updateConfig",
        "title": "update the configuration"
      },
      {
        "command": "fish-lsp.fixAll",
        "title": "execute all quick-fixes in file"
      },
      {
        "command": "fish-lsp.toggleSingleWorkspaceSupport",
        "title": "enable/disable single workspace support"
      },
      {
        "command": "fish-lsp.generateEnvVariables",
        "title": "output the $fish_lsp_* environment variables"
      },
      {
        "command": "fish-lsp.showReferences",
        "title": "show references"
      },
      {
        "command": "fish-lsp.showInfo",
        "title": "show server info"
      }
    ]
  },
  "dependencies": {
    "commander": "^12.0.0",
    "deepmerge": "^4.3.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.3.0",
    "husky": "^9.0.11",
    "npm-run-all": "^4.1.5",
    "tree-sitter": "^0.21.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.0.8",
    "web-tree-sitter": "^0.22.2",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esdmr/tree-sitter-fish": "^3.5.2-1",
    "@tsconfig/node-ts": "^23.6.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/eslint": "^9.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.1.0",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.4.0",
    "all-contributors-cli": "^6.26.1",
    "conventional-changelog": "^7.1.1",
    "esbuild": "^0.25.8",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "esbuild-plugin-tsc": "^0.5.0",
    "esbuild-plugins-node-modules-polyfill": "^1.7.1",
    "eslint": "^8.0.1",
    "eslint-config-love": "^44.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "knip": "^5.7.0",
    "lint-staged": "^15.2.7",
    "marked-man": "^1.3.5",
    "pinst": "^3.0.0",
    "rimraf": "^5.0.5",
    "tree-sitter-cli": "^0.22.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
