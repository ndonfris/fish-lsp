{
  "author": "ndonfris",
  "license": "Apache-2.0",
  "name": "fish-lsp",
  "version": "1.0.01",
  "description": "LSP implementation for fish/fish-shell",
  "keywords": [
    "lsp",
    "fish",
    "fish-shell",
    "language-server-protocol",
    "language-server"
  ],
  "homepage": "https://fish-lsp.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/ndonfris/fish-lsp.git"
  },
  "bin": "./bin/fish-lsp",
  "main": "./out/out.js",
  "typings": "./out/server.d.ts",
  "scripts": {
    "setup": "yarn run sh:build-wasm && yarn run sh:build-time",
    "postinstall": "yarn run setup && yarn run compile && yarn link --force --global 'fish-lsp' && fish-lsp complete > ~/.config/fish/completions/fish-lsp.fish",
    "sh:build-completions": "./scripts/build-completions.sh",
    "sh:build-time": "./scripts/build-time.sh",
    "sh:setup": "./scripts/setup.sh",
    "sh:build-wasm": "./scripts/build-fish-wasm.sh",
    "sh:relink": "./scripts/relink-locally.sh",
    "pre:clean": "yarn exec rimraf lib *.tsbuildinfo out",
    "clean": "yarn run pre:clean && tsc -b && echo '' > logs.txt",
    "clean-nodemodules": "yarn rimraf out *.tsbuildinfo node_modules && yarn install",
    "clean:all": "yarn exec rimraf out *.tsbuildinfo node_modules tree-sitter-fish.wasm",
    "fresh": "yarn run clean:all && yarn install && yarn run setup",
    "test": "yarn run jest --runInBand --watch --verbose true",
    "compile": "yarn tsc -b",
    "watch": "yarn tsc -b -w",
    "build:wasm": "tree-sitter build node_modules/tree-sitter-fish/ -o tree-sitter-fish.wasm",
    "build-binaries": "npx pkg --targets node18-linux,node18-macos,node18-win ./out/cli.js -o build/fish-lsp"
  },
  "enabledApiProposals": [
    "inlineCompletions"
  ],
  "eslintIgnore": [
    "!.eslintrc.cjs"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn run clean",
      "post-merge": "yarn"
    }
  },
  "preferGlobal": true,
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/out"
    ],
    "bail": 1,
    "moduleNameMapper": {
      "^completion/(.*)$": "<rootDir>/src/utils/completion/$1",
      "^utils/(.*)$": "<rootDir>/src/utils/$1",
      "^test-data/(.*)$": "<rootDir>/test-data/$1"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest",
      "^.+\\.js?$": "babel-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "testTimeout": 8000
  },
  "dependencies": {
    "@esdmr/tree-sitter-fish": "^3.5.1",
    "colors": "^1.4.0",
    "commander": "^12.0.0",
    "deepmerge": "^4.3.1",
    "fs-extra": "11.2.0",
    "lua-json": "^1.0.1",
    "ts-jest": "^29.1.2",
    "tsc": "^2.0.4",
    "typescript": "^5.4.3",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "3.17.5",
    "vscode-languageserver-textdocument": "1.0.11",
    "vscode-uri": "^3.0.8",
    "web-tree-sitter": "^0.22.2"
  },
  "peerDependencies": {
    "typescript": "^5.4.3"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^20.1.3",
    "@types/chai": "^4.3.14",
    "@types/fs-extra": "^11.0.4",
    "@types/lua-json": "^1.0.3",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "chai": "^5.1.0",
    "eslint": "^8.57.0",
    "fast-glob": "^3.3.2",
    "jest": "^29.7.0",
    "knip": "^5.7.0",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.5",
    "tree-sitter-cli": "^0.22.2",
    "tree-sitter-fish": "https://github.com/ram02z/tree-sitter-fish"
  }
}
